    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
    </Grid>
    <StackLayout Grid.Row="0">
        <Label Text="" />
        <Label Text="Odehraný čas [min.]" />
        <Label Text="Nejvyšší nahrané scóre [Armáda]" />
        <Label Text="Nejvyšší nahrané scóre [Potraviny]" />
        <Label Text="Nejvyšší nahrané scóre [Spokojenost]" />
